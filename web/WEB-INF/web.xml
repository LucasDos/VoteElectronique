<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Servlet definition -->
    <servlet>
        <servlet-name>Candidats</servlet-name>
        <servlet-class>Controller.Servlet.CandidatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CandidatsAdmin</servlet-name>
        <servlet-class>Controller.Servlet.CandidatAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidatsAdmin</servlet-name>
        <url-pattern>/candidatsAdmin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VotantAdmin</servlet-name>
        <servlet-class>Controller.Servlet.VotantServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Vote</servlet-name>
        <servlet-class>Controller.Servlet.VoteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Resultats</servlet-name>
        <servlet-class>Controller.Servlet.ResultatsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controller.Servlet.LoginServlet</servlet-class>
    </servlet>

    <!-- Servlet mapping -->
    <servlet-mapping>
        <servlet-name>Candidats</servlet-name>
        <url-pattern>/candidats</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>VotantAdmin</servlet-name>
        <url-pattern>/votants</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Vote</servlet-name>
        <url-pattern>/vote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Resultats</servlet-name>
        <url-pattern>/resultats</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>